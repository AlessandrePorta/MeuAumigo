<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_orange">

    <ImageView
        android:id="@+id/ivPetMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:background="@drawable/ic_onboarding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivIcLogo"
        />

    <ImageView
        android:id="@+id/ivIcLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="src_in"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_onboarding_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvTitle"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_text_title"
        android:textSize="24sp"
        android:textColor="@color/orange"
        android:fontFamily="@font/baloo2_extrabold"
        android:gravity="center"
        android:lineSpacingExtra="-10dp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintBottom_toTopOf="@id/btStart"
        android:layout_marginVertical="20dp" />

    <Button
        android:id="@+id/btStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_button_field"
        android:backgroundTint="@color/orange"
        android:text="@string/onboarding_bt_lets_start"
        android:textSize="18sp"
        android:fontFamily="@font/baloo2_extrabold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>